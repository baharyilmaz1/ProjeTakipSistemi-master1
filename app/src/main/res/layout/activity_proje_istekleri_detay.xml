<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="baltanesi.com.projetakipsistemi.Ogretmen.ProjeIstekleriDetayActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtProjeYollayan"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Öneri Isteği Yollayan" />

            <TextView
                android:id="@+id/txtProjeBaslik"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oneri Proje Baslik" />

            <TextView
                android:id="@+id/txtProjeIcerigi"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Oneri Proje Icerik" />
    <LinearLayout
    android:layout_width="wrap_content"
    android:orientation="horizontal"
        android:layout_gravity="center"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/onerilenProjeyiIptalEt"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Projeyi İptal Et" />
    <Button
        android:id="@+id/onerilenProjeyiOnayla"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Projeyi Onayla" />
</LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
