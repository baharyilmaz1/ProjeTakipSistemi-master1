<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="baltanesi.com.projetakipsistemi.KayitActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtTextIsimSoyisim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:ems="10"
                android:hint="İsim Soyisim"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtTextMailAdresi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:hint="Mail Adresi"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtTextSifre"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Şifre"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtTextSifreTekrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:ems="10"
                android:hint="Şifre tekrar"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtTelefonNumarasi"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Telefon Numarası"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btnKayitOl"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kayıt Ol" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
