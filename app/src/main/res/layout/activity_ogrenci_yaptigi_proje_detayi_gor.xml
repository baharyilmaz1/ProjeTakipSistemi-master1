<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="baltanesi.com.projetakipsistemi.Ogrenci.OgrenciYaptigiProjeDetayiGor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/detayProjeAdi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Proje Adi" />

            <TextView
                android:id="@+id/detayProjeTarih"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:text="Proje Tarih" />

            <TextView
                android:id="@+id/detayProjeICerik"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proje Icerik" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
